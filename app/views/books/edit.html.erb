<% if @book.errors.any? %>
  <div>
    <h2><%= @book.errors.count %>件のerrorが発生しました</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>     
    </ul>
  </div>
<% end %>

<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <br>
  <br>
  <%= f.submit "Update Book" %>
<% end %>

<p>
  <%= link_to "Show", book_path %>
  |
  <%= link_to "Back", books_path %>
</p>
