<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/d43b39c22c.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

<nav class="navbar navbar-inverse">
	<div class="container">
		<div class="collapse navbar-collapse" id="navbarEexample7">
      <ul class='nav navbar-nav navbar-left' >
          <span class="title_bar">Bookers</span>
      </ul>
			<ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li> 
                <%= link_to " Home", user_path(current_user.id), class: "glyphicon glyphicon-home" %></li>   
              <li>
                <%= link_to " Users", users_path, class: "glyphicon glyphicon-user" %></li>   
              <li>
                <%= link_to " Books", books_path, class: "glyphicon glyphicon-book" %></li>   
              <li>
                <%= link_to " logout", destroy_user_session_path, { method: :delete, data: {confirm: "ログアウトしますか？"}, class: "glyphicon glyphicon-log-out"} %>
              </li>
            <% else %> 
              <li>
                <%= link_to " Home", root_path, class: "glyphicon glyphicon-home" %>
              </li>
              <li>
                <%= link_to " About", home_about_path, class: "glyphicon glyphicon-link about" %>
              </li>
              <li>
                <%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit" %>
              </li>
              <li>
                <%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in" %>
              </li>
            <% end %>
			</ul>
		</div>
	</div>
</nav>
</div>
</div>

    <div class='container'>
      <%= yield %>
    </div>
    <footer>
      <div class='col-xs-4 col-xs-offset-8'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>